
===========================


PKG_BOARD 패키지


create or replace NONEDITIONABLE PACKAGE PKG_BOARD AS 

  -- 패키지 선언부  
  
  -- 게시물 목록
  PROCEDURE PROC_BOARD_LIST(
    IN_MENU_ID IN VARCHAR2,
    O_CUR OUT SYS_REFCURSOR -- 커서 2종류 : CURSOR, SYS_REFURSOR(결과를 받을 수있는 커서)
  );
  
  -- 게시물 내용 보기
  PROCEDURE PROC_BOARD_VIEW(
    IN_IDX IN NUMBER,
    O_CUR OUT SYS_REFCURSOR
  );
  
  -- 게시물 삭제
  PROCEDURE PROC_BOARD_DELETE(
    IN_IDX IN NUMBER
  );

  -- 게시물 수정
  PROCEDURE PROC_BOARD_UPDATE(
    IN_IDX IN NUMBER,
    IN_TITLE IN VARCHAR2,
    IN_CONT IN VARCHAR2
  );

  -- 게시물 추가 
  PROCEDURE PROC_BOARD_INSERT(
    IN_MENU_ID IN VARCHAR2,
    IN_BNUM IN NUMBER,
    IN_LVL IN NUMBER,
    IN_STEP IN NUMBER,
    IN_NREF IN NUMBER,
    IN_TITLE IN VARCHAR2,
    IN_CONT IN VARCHAR2,
    IN_WRITTER IN VARCHAR2
    );

END PKG_BOARD;



========================

PKG_BOARD BODY 패키지




create or replace NONEDITIONABLE PACKAGE BODY PKG_BOARD AS

  -- 게시물 목록
  PROCEDURE PROC_BOARD_LIST(
    IN_MENU_ID IN VARCHAR2,
    O_CUR OUT SYS_REFCURSOR -- 커서 2종류 : CURSOR, SYS_REFURSOR(결과를 받을 수있는 커서)
  ) AS
  BEGIN
    OPEN O_CUR FOR 
    SELECT IDX, MENU_ID,DECODE(LVL,0,'','[RE] ') || TITLE AS TITLE,WRITTER, TO_CHAR(REGDATE,'YYYY-MM-DD') REGDATE,
      READCOUNT,BNUM,LVL,STEP,NREF
    FROM BOARD
    WHERE MENU_ID=IN_MENU_ID
    ORDER BY NREF DESC,STEP ASC;
  END PROC_BOARD_LIST;

  --게시물 내용 조회
  PROCEDURE PROC_BOARD_VIEW(
    IN_IDX IN NUMBER,
    O_CUR OUT SYS_REFCURSOR
  ) AS
  BEGIN
    --조회수 증가
    UPDATE BOARD 
    SET READCOUNT=READCOUNT+1
    WHERE IDX=IN_IDX;

    --글 조회
    OPEN O_CUR FOR
    SELECT IDX,MENU_ID,TITLE,NVL(CONT,' ') CONT,WRITTER,REGDATE,READCOUNT,BNUM,LVL,STEP,NREF
    FROM BOARD
    WHERE IDX=IN_IDX;
  END PROC_BOARD_VIEW;

  --게시물 삭제
  PROCEDURE PROC_BOARD_DELETE(
    IN_IDX IN NUMBER
  ) AS
    V_NREF NUMBER(5);
    V_LVL NUMBER(5);
    V_STEP NUMBER(5);
  BEGIN
    -- 답글중 하나 삭제시 그에 대한 답글도 모두 삭제
    SELECT NREF,LVL,STEP
      INTO V_NREF,V_LVL,V_STEP
    FROM BOARD
    WHERE IDX=IN_IDX;

    DELETE FROM BOARD
    WHERE IDX IN(
      SELECT IDX 
      FROM BOARD
      WHERE NREF=V_NREF 
      AND LVL>=V_LVL
      AND STEP>=V_STEP
    );
  END PROC_BOARD_DELETE;

  PROCEDURE PROC_BOARD_UPDATE(
    IN_IDX IN NUMBER,
    IN_TITLE IN VARCHAR2,
    IN_CONT IN VARCHAR2
  ) AS
  BEGIN
    UPDATE BOARD 
    SET TITLE=IN_TITLE, CONT=IN_CONT
    WHERE IDX=IN_IDX;
    COMMIT;
  END PROC_BOARD_UPDATE;

  PROCEDURE PROC_BOARD_INSERT(
    IN_MENU_ID IN VARCHAR2,
    IN_BNUM IN NUMBER,
    IN_LVL IN NUMBER,
    IN_STEP IN NUMBER,
    IN_NREF IN NUMBER,
    IN_TITLE IN VARCHAR2,
    IN_CONT IN VARCHAR2,
    IN_WRITTER IN VARCHAR2
    ) AS
    V_IDX NUMBER(5);
    V_BNUM NUMBER(5);
    V_LVL NUMBER(5);
    V_STEP NUMBER(5);
    V_NREF NUMBER(5);
  BEGIN

  -- IDX구하기
  SELECT NVL(MAX(IDX),0)+1
    INTO V_IDX
  FROM BOARD;

  IF IN_BNUM=0 THEN --새글

    SELECT NVL(MAX(BNUM),0)+1
      INTO  V_BNUM
    FROM  BOARD 
    WHERE MENU_ID=IN_MENU_ID;
    V_LVL  := 0;
    V_STEP := 0;
    SELECT NVL(MAX(NREF),0)+1
      INTO  V_NREF
    FROM  BOARD 
    WHERE MENU_ID=IN_MENU_ID;
  
  ELSE --답글
    V_BNUM :=IN_BNUM;
    V_LVL :=IN_LVL+1;
    V_STEP :=IN_STEP+1;

    UPDATE BOARD 
    SET STEP=STEP+1
    WHERE MENU_ID=IN_MENU_ID
      AND NREF=IN_NREF
      AND STEP>IN_STEP;
    V_NREF :=IN_NREF;
  END IF;
  
  INSERT INTO BOARD 
    (IDX,MENU_ID,TITLE,
     CONT,WRITTER,REGDATE,
     READCOUNT,BNUM,LVL,
     STEP,NREF
    ) VALUES (
    V_IDX,
    IN_MENU_ID,
    IN_TITLE,
    IN_CONT,
    IN_WRITTER,
    SYSDATE,
    0,
    V_BNUM,
    V_LVL,
    V_STEP,
    V_NREF
    ); 
  END PROC_BOARD_INSERT;

END PKG_BOARD;




=========================



PKG_PDS 패키지




create or replace NONEDITIONABLE PACKAGE PKG_PDS AS 

  PROCEDURE PRO_PDS_PAGINGLIST(
    IN_MENU_ID  IN VARCHAR2,
    IN_NOWPAGE  IN NUMBER,
    IN_PAGECOUNT  IN NUMBER,
    OUT_TOTALCOUNT  OUT NUMBER,
    O_CUR OUT SYS_REFCURSOR
  );

  --게시물 쓰기
  PROCEDURE PROC_PDS_INSERT(
    IN_MENU_ID IN VARCHAR2,
    IN_TITLE IN VARCHAR2,
    IN_CONT IN VARCHAR2,
    IN_WRITTER IN VARCHAR2,
    IN_BNUM IN NUMBER,
    IN_STEP IN NUMBER,
    IN_LVL IN NUMBER,
    IN_NREF IN NUMBER,

    --파일업로드 정보 (FILE_ARRAY : ORACLE TYPE(배열)을 생성한것)
    IN_FILENAME IN FILE_ARRAY,
    IN_FILEEXT IN FILE_ARRAY,
    IN_SFILENAME IN FILE_ARRAY
  );
  
  PROCEDURE PROC_PDS_VIEW(
    IN_IDX IN NUMBER,
    O_CUR OUT SYS_REFCURSOR
  );

  PROCEDURE PROC_PDS_FILELIST(
    IN_IDX IN NUMBER,
    O_CUR OUT SYS_REFCURSOR
  );
END PKG_PDS;



PKG_PDS BODY 패키지



create or replace NONEDITIONABLE PACKAGE BODY PKG_PDS AS 
  
  PROCEDURE PRO_PDS_PAGINGLIST(
    IN_MENU_ID  IN VARCHAR2,
    IN_NOWPAGE  IN NUMBER,
    IN_PAGECOUNT  IN NUMBER,
    OUT_TOTALCOUNT  OUT NUMBER,
    O_CUR OUT SYS_REFCURSOR
  ) AS
    V_STARTNUM NUMBER(10);
    V_ENDNUM NUMBER(10);
  BEGIN
    --페이징 처리를 위한 현재 메뉴의 전체자료수
    SELECT  NVL(COUNT(IDX),0)   
      INTO  OUT_TOTALCOUNT
    FROM  BOARD
    WHERE MENU_ID=IN_MENU_ID;

    --가져올 자료의 시작번호, 끝번호 계산 
    --          시작    끝
    -- PAGE1     1      10
    -- PAGE2     11     20
    V_STARTNUM := (IN_NOWPAGE -1)*IN_PAGECOUNT+1;
    V_ENDNUM := IN_NOWPAGE * IN_PAGECOUNT;

    OPEN O_CUR FOR
    SELECT * FROM(
      SELECT ROW_NUMBER() OVER(ORDER BY NREF DESC, STEP ASC) AS RN,
      IDX,MENU_ID,TITLE,WRITTER,REGDATE,READCOUNT,
      (
        SELECT COUNT(FILE_NUM) FROM FILES F
        WHERE B.IDX=F.IDX
      ) AS FILESCOUNT
      ,BNUM,LVL,STEP,NREF,DELNUM
      FROM BOARD B
    ) T
    WHERE T.RN BETWEEN V_STARTNUM AND V_ENDNUM;
  END PRO_PDS_PAGINGLIST;

  PROCEDURE PROC_PDS_INSERT(
    IN_MENU_ID IN VARCHAR2,
    IN_TITLE IN VARCHAR2,
    IN_CONT IN VARCHAR2,
    IN_WRITTER IN VARCHAR2,
    IN_BNUM IN NUMBER,
    IN_STEP IN NUMBER,
    IN_LVL IN NUMBER,
    IN_NREF IN NUMBER,

    --파일업로드 정보 (FILE_ARRAY : ORACLE TYPE(배열)을 생성한것)
    IN_FILENAME IN FILE_ARRAY,
    IN_FILEEXT IN FILE_ARRAY,
    IN_SFILENAME IN FILE_ARRAY
  ) AS
    V_BNUM NUMBER(5,0);
    V_LVL NUMBER(5,0);
    V_STEP NUMBER(5,0);
    V_NREF NUMBER(5,0);

    V_MAXIDX NUMBER(5,0);
  BEGIN
    -- insert : 저장 => 새글/답글
    IF IN_BNUM = 0 THEN --새글
      SELECT NVL(MAX(BNUM),0)+1
        INTO V_BNUM
      FROM BOARD
      WHERE MENU_ID=IN_MENU_ID;

      V_LVL := 0 ;
      V_STEP := 0 ;
      
      SELECT NVL(MAX(NREF),0)+1
        INTO V_NREF
      FROM BOARD
      WHERE MENU_ID=IN_MENU_ID;
    ELSE  --답글
      V_BNUM := IN_BNUM ;
      V_LVL := IN_LVL+1 ;
      V_STEP := IN_STEP+1 ;
      V_NREF := IN_NREF ;

      --기존 글들 밀어내기(step증가)
      UPDATE BOARD
      SET STEP=STEP+1
      WHERE NREF=IN_NREF
        AND STEP>IN_STEP
        AND MENU_ID=IN_MENU_ID;

    END IF;

    INSERT INTO BOARD(
      IDX,MENU_ID,TITLE,CONT,WRITTER,REGDATE,READCOUNT,BNUM,LVL,STEP,NREF,DELNUM
    ) VALUES(
      (SELECT NVL(MAX(IDX),0)+1 FROM BOARD)
      ,IN_MENU_ID,IN_TITLE,IN_CONT,IN_WRITTER,SYSDATE,0,V_BNUM,V_LVL,V_STEP,V_NREF,0
    );

    --파일 저장에 필요한 IDX(위에서 INSERT한 IDX)
    SELECT MAX(IDX) INTO V_MAXIDX FROM BOARD; 



    --파일 저장
    --ORACLE 배열은 1부터 시작
    IF IN_FILENAME(1) IS NOT NULL THEN -- 파일이 있으면
      FOR I IN IN_FILENAME.FIRST .. IN_FILENAME.LAST -- 여러 파일 처리
      LOOP
        INSERT INTO FILES(
          FILE_NUM,IDX,FILENAME,FILEEXT,SFILENAME
        )
        VALUES(
          (SELECT NVL(MAX(FILE_NUM),0)+1 FROM FILES),
          V_MAXIDX,
          IN_FILENAME(I),
          IN_FILEEXT(I),
          IN_SFILENAME(I)
        );
      END LOOP;

      COMMIT;
    END IF;


  END PROC_PDS_INSERT;


  PROCEDURE PROC_PDS_VIEW(
    IN_IDX IN NUMBER,
    O_CUR OUT SYS_REFCURSOR
  ) AS
  BEGIN

    --조회수 증가
    UPDATE BOARD
    SET READCOUNT=READCOUNT+1
    WHERE IDX=IN_IDX;

    COMMIT;

    OPEN O_CUR FOR
      SELECT IDX,MENU_ID,TITLE,CONT,WRITTER,REGDATE,READCOUNT,BNUM,LVL,STEP,NREF,DELNUM
      FROM  BOARD
      WHERE IDX=IN_IDX;
  END PROC_PDS_VIEW;


  PROCEDURE PROC_PDS_FILELIST(
    IN_IDX IN NUMBER,
    O_CUR OUT SYS_REFCURSOR
  ) AS
  BEGIN
    OPEN O_CUR FOR 
    SELECT FILE_NUM,IDX,FILENAME,FILEEXT,SFILENAME
    FROM  FILES
    WHERE IDX=IN_IDX;
  END PROC_PDS_FILELIST;

END PKG_PDS;
